{
  "name": "Dotnet 9 Dev Container",
  "image": "mcr.microsoft.com/dotnet/sdk:9.0",
  "runArgs": ["--init", "--add-host=host.docker.internal:host-gateway"],
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        // SQL Server (mssql) - adds Data Explorer and sql tooling
        "ms-mssql.mssql",
        // Swagger Viewer - view OpenAPI/Swagger specs
        "Arjun.swagger-viewer",
        // GitHub Actions - syntax highlighting and validation for workflows
        "github.vscode-github-actions",
        // Azure Functions - tooling for Azure Functions development
        "ms-azuretools.vscode-azurefunctions"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workspace",
  "forwardPorts": [],
  "remoteUser": "root"
}
