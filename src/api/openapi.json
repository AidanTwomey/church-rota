{
  "openapi": "3.0.1",
  "info": {
    "title": "Church Rota API",
    "description": "API for managing church readers and schedules",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    }
  ],
  "paths": {
    "/readers": {
      "get": {
        "tags": ["Readers"],
        "summary": "Get all readers",
        "description": "Returns a list of all people who have the Reader role",
        "operationId": "GetReaders",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Reader"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/readers/{id}": {
      "get": {
        "tags": ["Readers"],
        "summary": "Get reader by phone number",
        "description": "Returns a specific reader by their sanitized phone number",
        "operationId": "GetReader",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Phone number (will be sanitized to digits only)",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "07700900123"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reader"
                }
              }
            }
          },
          "404": {
            "description": "Reader not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Reader": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Full name of the reader"
          }
        },
        "required": ["name"]
      }
    }
  }
}
