{
  "openapi": "3.0.1",
  "info": {
    "title": "Church Rota API",
    "description": "API for managing church readers, schedules, and rota swaps",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    },
    {
      "url": "https://func-church-rota-swap-dev.azurewebsites.net/api",
      "description": "Azure Function App"
    }
  ],
  "paths": {
    "/readers": {
      "get": {
        "tags": ["Readers"],
        "summary": "Get all readers",
        "description": "Returns a list of all people who have the Reader role",
        "operationId": "GetReaders",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Reader"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/readers/{id}": {
      "get": {
        "tags": ["Readers"],
        "summary": "Get reader by phone number",
        "description": "Returns a specific reader by their sanitized phone number",
        "operationId": "GetReader",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Phone number (will be sanitized to digits only)",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "07700900123"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reader"
                }
              }
            }
          },
          "404": {
            "description": "Reader not found"
          }
        }
      }
    },
    "/schedule/{scheduleId}": {
      "get": {
        "tags": ["Schedule"],
        "summary": "Get a specific schedule entry",
        "description": "Returns a single schedule entry by ID",
        "operationId": "GetScheduleEntry",
        "parameters": [
          {
            "name": "scheduleId",
            "in": "path",
            "description": "ID of the schedule entry",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduleEntry"
                }
              }
            }
          },
          "404": {
            "description": "Schedule entry not found"
          }
        }
      },
      "patch": {
        "tags": ["Schedule"],
        "summary": "Request a swap for a schedule entry",
        "description": "Request a replacement reader for this schedule entry. Uses custom media type to indicate swap request. Returns the best available replacement with their contact details.",
        "operationId": "RequestSwap",
        "parameters": [
          {
            "name": "scheduleId",
            "in": "path",
            "description": "ID of the schedule entry to swap",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/vnd.church-rota.swap-request+json": {
              "schema": {
                "$ref": "#/components/schemas/SwapRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Replacement found successfully - schedule updated with replacement",
            "content": {
              "application/vnd.church-rota.swap-response+json": {
                "schema": {
                  "$ref": "#/components/schemas/SwapResponse"
                }
              }
            }
          },
          "404": {
            "description": "No available replacement found",
            "content": {
              "application/vnd.church-rota.swap-response+json": {
                "schema": {
                  "$ref": "#/components/schemas/SwapNotFoundResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      },
      "put": {
        "tags": ["Schedule"],
        "summary": "Update a schedule entry",
        "description": "Update an existing schedule entry",
        "operationId": "UpdateScheduleEntry",
        "parameters": [
          {
            "name": "scheduleId",
            "in": "path",
            "description": "ID of the schedule entry",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateScheduleEntry"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Schedule entry updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduleEntry"
                }
              }
            }
          },
          "404": {
            "description": "Schedule entry not found"
          }
        }
      }
    },
    "/schedule": {
      "get": {
        "tags": ["Schedule"],
        "summary": "Get schedule",
        "description": "Returns the schedule for a date range",
        "operationId": "GetSchedule",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "description": "Start date (ISO 8601 format)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "example": "2025-11-01"
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "End date (ISO 8601 format)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "example": "2025-12-31"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ScheduleEntry"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Schedule"],
        "summary": "Create schedule entry",
        "description": "Add a new entry to the schedule",
        "operationId": "CreateScheduleEntry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateScheduleEntry"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Schedule entry created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScheduleEntry"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/availability/{personId}": {
      "get": {
        "tags": ["Availability"],
        "summary": "Get person availability",
        "description": "Returns availability for a specific person",
        "operationId": "GetAvailability",
        "parameters": [
          {
            "name": "personId",
            "in": "path",
            "description": "ID of the person",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Start date (ISO 8601 format)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "End date (ISO 8601 format)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AvailabilityEntry"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Availability"],
        "summary": "Set availability",
        "description": "Set availability for a person on specific dates",
        "operationId": "SetAvailability",
        "parameters": [
          {
            "name": "personId",
            "in": "path",
            "description": "ID of the person",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SetAvailability"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Availability updated successfully"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Reader": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Full name of the reader"
          }
        },
        "required": ["name"]
      },
      "SwapRequest": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "description": "Optional reason for the swap request"
          }
        }
      },
      "SwapResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "swapId": {
            "type": "string",
            "description": "Unique identifier for this swap request"
          },
          "replacement": {
            "$ref": "#/components/schemas/ReplacementReader"
          }
        }
      },
      "ReplacementReader": {
        "type": "object",
        "properties": {
          "personId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string",
            "description": "Phone number to contact the replacement"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "SwapNotFoundResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "No available replacement found"
          },
          "suggestions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "personId": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "availableFrom": {
                  "type": "string",
                  "format": "date"
                }
              }
            }
          }
        }
      },
      "UpdateScheduleEntry": {
        "type": "object",
        "properties": {
          "personId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["Confirmed", "NeedsCover", "Covered"]
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "ScheduleEntry": {
        "type": "object",
        "properties": {
          "scheduleId": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "solemnity": {
            "type": "string",
            "description": "Name of the solemnity or Sunday"
          },
          "personId": {
            "type": "string"
          },
          "personName": {
            "type": "string"
          },
          "roleId": {
            "type": "string"
          },
          "roleName": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["Confirmed", "NeedsCover", "Covered"],
            "description": "Status of the schedule entry"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "CreateScheduleEntry": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "personId": {
            "type": "string"
          },
          "roleId": {
            "type": "string"
          },
          "solemnityId": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": ["date", "personId", "roleId"]
      },
      "AvailabilityEntry": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "isAvailable": {
            "type": "boolean"
          }
        }
      },
      "SetAvailability": {
        "type": "object",
        "properties": {
          "dates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date"
                },
                "isAvailable": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "required": ["dates"]
      }
    }
  }
}
